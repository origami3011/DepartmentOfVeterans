@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "User Management";
}

<h2>User Management</h2>
<a asp-action="AddUser" class="btn btn-sm btn-primary">Add New User</a>
<a asp-action="LoadRandomUsers" class="btn btn-sm btn-primary">Load users from RandomUser API</a>

<table class="table table-sm table-striped table-bordered m-2">
    <thead>
        <tr>
            <th>User name</th>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Gender</th>
            <th>Avatar</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in Model)
        {
            <tr>
                <td>@r.UserName</td>
                <td>@r.UserEmail</td>
                <td>@r.FirstName</td>
                <td>@r.LastName</td>
                <td>@r.Gender</td>
                <td><img src="@r.Picture" /></td>
                <td>
                    <a asp-action="UpdateUser" asp-route-id="@r.UserId">
                        <input class="btn btn-primary" type="button" value="Update" />
                    </a>
                </td>
                <td>
                    <form asp-action="DeleteUser" method="post">
                        <input type="hidden" value="@r.UserId" name="UserId" />
                        <input type="image" src="/icon/close.png" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>