@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1 class="bg-info text-white">Login</h1>
<div class="text-danger" asp-validation-summary="All"></div>

<form asp-action="Login" method="post">

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" autocomplete="username" />
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" autocomplete="current-password" type="password" />
    </div>
    <br />
    <div class ="form-group">
        <button class="btn btn-primary" type="submit">Log In</button>
        <a class="btn btn-secondary" asp-action="Register">Register account</a>
    </div>
</form>